{
  "name": "dlents/http",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "http",
    "psr7"
  ],
  "description": "dlents-HTTP base class repository, PSR implementation",
  "license": "MIT",
  "authors": [
    {
      "name": "twosee",
      "email": "twose@qq.com"
    },
    {
      "name": "David Lents",
      "email": "david@lents.net"
    }
  ],
  "support": {
    "issues": "https://github.com/dlents/http/issues"
  },
  "require": {
    "php": ">=7.1",
    "psr/http-message": "~1.0"
  },
  "autoload": {
    "files": [
      "src/functions.php"
    ],
    "psr-4": {
      "Swlib\\Http\\": "src"
    }
  },

  "require-dev": {
    "roave/security-advisories": "dev-master",
    "eaglewu/swoole-ide-helper": "dev-master",
    "phpunit/phpunit": "~7"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml"
  }
}
